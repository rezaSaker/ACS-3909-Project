{% extends 'layouts/main_layout.njk' %}

{% block main_body %}
    <p>Welcome {{ username }} </br>
    Below is the list of campus cafeterias</p>

    {% for cafe in cafelist %}
        <a href="#">{{cafe.Cafe}}</a> <!-- Some changes here-->
    {% endfor %}
    <a href="new_Restaurant.njk"><button id="addBtn">+</button><a/>
{% endblock %}

{% block style %}
    p { 
        text-align: center;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    a {
        display: block;
        text-align: center;
        margin-bottom: 5px;
        text-decoration:none; <!-- Some changes here-->
    }

    a:hover{
        color:green;
    }
    
    #addBtn{
        background-color: forestgreen; 
        border: none;
        color: white;
        padding: 5px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 25px;
        border-radius: 50%;
        margin-bottom: 5px;
    }

     #addBtn:hover{
        opacity: 0.8;
    }
{% endblock %}