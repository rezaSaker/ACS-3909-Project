{% extends 'layouts/main_layout.njk' %}

{% block main_body %}
    <p>Welcome {{ username }} </br>
    Below is the list of campus cafeterias</p>

    {% for cafe in cafelist %}
        <a href="#">{{cafe}}</a>
    {% endfor %}
{% endblock %}

{% block style %}
    p { 
        text-align: center;
        margin-top: 20px;
        margin-bottom: 10px;
    }
    a {
        display: block;
        text-align: center;
        margin-bottom: 5px;
    }
{% endblock %}